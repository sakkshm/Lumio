{
  "compilerOptions": {
    /* Environment & output */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM"],

    /* Paths */
    "rootDir": "src",
    "outDir": "build",

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Declarations & builds */
    "composite": true,
    "declaration": true,

    /* JSX */
    "jsx": "react-jsx",

    /* Best practices */
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src"]
}
